<%= provide :title, "Home" %>

<% if logged_in? %>
  <% @user ||= current_user %>
  <div class="center jumbotron">
    <h1>
      Hi <%= @user.name %>!
    </h1>
    <h3>
      Click on the button below to see the courses. 
    </h3>

    <%= link_to "Click here!", courses_path, class: "btn btn-lg btn-primary" %>
  </div>
<% else %> 
  <div class="center jumbotron">
    <h1>Course Registration System</h1>

    <h2>
      Please login to your account or click on the button below to sign up. 
    </h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %> 
</div>
<% end %>

